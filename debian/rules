#!/usr/bin/make -f 
 
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all 
 
%: 
	dh $@  --with autoreconf

override_dh_autoreconf:
	./autogen.sh
	dh_auto_configure 

override_dh_clean:
	#removing files generated by autogen.sh
	rm -fr build-aux/
	rm -fr m4/
	rm -fr Documentation/Makefile.in
	rm -fr Makefile.in
	rm -fr aclocal.m4
	rm -fr autom4te.cache
	rm -fr config.h.in
	rm -fr configure
	rm -fr daxctl/lib/Makefile.in
	rm -fr daxctl/Makefile.in
	rm -fr ndctl/Makefile.in
	rm -fr ndctl/lib/Makefile.in
	rm -fr test/Makefile.in
	rm -fr version.m4
	rm -fr ndctl/libndctl.h
	dh_clean
